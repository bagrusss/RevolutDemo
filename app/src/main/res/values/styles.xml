<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="actionBarStyle">@style/ToolbarTheme</item>
    </style>

    <style name="ToolbarTheme" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="elevation">0dp</item>
        <item name="titleTextStyle">@style/ToolbarTitleTextStyle</item>
    </style>

    <style name="ToolbarTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppTheme.BlackAccent">
        <item name="colorAccent">@color/black</item>
    </style>

</resources>
